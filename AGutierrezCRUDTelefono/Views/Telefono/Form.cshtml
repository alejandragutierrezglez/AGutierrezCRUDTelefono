@model ML.Telefono
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Form", "Telefono", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.IdTelefono, new { @class = "hidden" })
                        @Html.TextBoxFor(model => model.IdTelefono, new { @class = "hidden form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.IdTelefono)
                        @*hidden*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Marca)
                        @Html.TextBoxFor(model => model.Marca, new { @class = "form-control", @id = "txtMarca" })
                        @Html.ValidationMessageFor(model => model.Marca, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Modelo)
                        @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control", @id = "txtModelo" })
                        @Html.ValidationMessageFor(model => model.Modelo, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.NumSerie)
                        @Html.TextBoxFor(model => model.NumSerie, new { @class = "form-control", @id = "txtNumSerie" })
                        @Html.ValidationMessageFor(model => model.NumSerie, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Regresar", "GetAll", "Telefono", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

